@using ThriveHavenMovies.Models.ConcessionStuff
@model IEnumerable<ThriveHavenMovies.Models.ConcessionStuff.Concession>

<div class="jumbotron">
    <h1 class="display-4">Food and Drinks</h1>
</div>

<hr class="my-4">

<div class="row">
    @foreach (var concession in Model)
    {
        <div class="col-md-4 d-flex">
            <div class="card mb-4 flex-fill">
                <img src="@concession.ImageUrl" class="card-img-top" alt="@concession.ItemName" />
                <div class="card-body">
                    <h5 class="card-title">@concession.ItemName</h5>
                    <p class="card-text">$@concession.Cost</p>

                    <form asp-action="AddItemToCart" method="post">
                    <input type="hidden" name="concessionId" value="@concession.ItemID" />
                        <input type="number" name="quantity" min="1" value="1" style="width: 100px;" />
                        <button type="submit" class="btn btn-primary">Add Item To Cart</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
