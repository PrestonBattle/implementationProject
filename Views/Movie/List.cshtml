@model IEnumerable<Movie>


<div class="container mt-4">
    <h1 class="text-center">Movie Gallery</h1>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 d-flex">
                <div class="card mb-4 flex-fill">
                    <img src="@movie.ImageUrl" class="card-img-top fixed-img" alt="@movie.Name">

                    <!-- Attribution under image -->
                    <div class="text-end text px-2 pt-1" style="font-size: 9px;">
                        This photo by Unknown Author is licensed under CC BY-SA
                    </div>

                    <div class="card-body d-flex flex-column">
                        <!-- Title + Rating in one row -->
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <h5 class="card-title mb-0">@movie.Name</h5>
                            <span class="text-small">@movie.Rating</span>
                        </div>

                        <!-- TimeFrame -->
                        <span class="text-muted small mb-1">Time: @movie.TimeFrame</span>

                        <!-- Genre -->
                        <span class="text-small mb-2">Genre: @movie.Genre</span>

                        <!-- CTA Button -->
                        <a asp-action = "TicketView" class="btn btn-primary mt-auto">Tickets</a>
                    </div>
                </div>
            </div>
        }

      

